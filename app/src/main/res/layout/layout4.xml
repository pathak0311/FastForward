<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JAGRITI"
        android:id="@+id/jagriti"
        android:onClick="openJagriti"
        android:drawableTop="@drawable/ffi"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESCAPE"
        android:onClick="openEscape"
        android:drawableTop="@drawable/ffi"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLOODLINE"
        android:onClick="openBloodLine"
        android:drawableTop="@drawable/ffi"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISHA"
        android:onClick="openDisha"
        android:drawableTop="@drawable/ffi"/>

</LinearLayout>
</ScrollView>
